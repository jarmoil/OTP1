<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane fx:id="cardPane" prefHeight="120.0" prefWidth="400.0" stylesheets="@../css/global.css" styleClass="highlightCard" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.analytics.FlashcardAnalyticsCardController">
    <children>
        <VBox layoutX="15.0" layoutY="10.0" spacing="5.0" prefWidth="370.0">
            <children>
                <Label fx:id="questionLabel" styleClass="card-title" text="%flashcardAnalyticsCardFXML.question" textFill="WHITE" wrapText="true" />
                <Label fx:id="choicesLabel" styleClass="card-subtitle" text="%flashcardAnalyticsCardFXML.choices" textFill="#CCCCCC" wrapText="true" />
                <Label fx:id="correctAnswerLabel" styleClass="card-subtitle" text="%flashcardAnalyticsCardFXML.answer" textFill="#90EE90" />
                <Label fx:id="performanceLabel" styleClass="card-subtitle" text="%flashcardAnalyticsCardFXML.performance" textFill="#888888" />
            </children>
        </VBox>
    </children>
</Pane>
