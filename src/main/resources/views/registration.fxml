<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" stylesheets="@../css/MainWindowStyle.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.login.RegisterController">
    <children>
        <Pane prefHeight="400.0" prefWidth="400.0" styleClass="mainPane">
            <children>
                <Pane layoutX="50.0" layoutY="50.0" prefHeight="300.0" prefWidth="300.0" styleClass="highlightCard">
                    <children>
                        <Label layoutX="70.0" layoutY="14.0" text="%registrationFXML.register" textFill="WHITE">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </Label>

                        <TextField fx:id="usernameField" layoutX="70.0" layoutY="80.0" prefWidth="160.0" promptText="%registrationFXML.username" />
                        <PasswordField fx:id="passwordField" layoutX="70.0" layoutY="120.0" prefWidth="160.0" promptText="%registrationFXML.password" />
                        <PasswordField fx:id="confirmPasswordField" layoutX="70.0" layoutY="160.0" prefWidth="160.0" promptText="%registrationFXML.confirmPassword" />
                        <Button layoutX="100.0" layoutY="210.0" onAction="#handleRegister" prefWidth="100.0" text="%registrationFXML.register" />
                        <Button layoutX="100.0" layoutY="250.0" onAction="#handleBackToLogin" prefWidth="100.0" text="%registrationFXML.backToLogin" />

                        <Label fx:id="errorLabel" layoutX="70.0" layoutY="280.0" textFill="RED" />
                    </children>
                </Pane>
            </children>
        </Pane>
    </children>
</AnchorPane>
