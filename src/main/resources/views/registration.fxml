<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" stylesheets="@../css/MainWindowStyle.css"
            xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.RegisterController">
    <children>
        <Pane prefWidth="400.0" prefHeight="400.0" styleClass="mainPane">
            <children>
                <Pane layoutX="50.0" layoutY="50.0" prefWidth="300.0" prefHeight="300.0" styleClass="highlightCard">
                    <children>
                        <Label layoutX="95.0" layoutY="20.0" text="Register" textFill="WHITE">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>

                        <TextField fx:id="usernameField" layoutX="70.0" layoutY="80.0" prefWidth="160.0" promptText="Username"/>
                        <PasswordField fx:id="passwordField" layoutX="70.0" layoutY="120.0" prefWidth="160.0" promptText="Password"/>
                        <PasswordField fx:id="confirmPasswordField" layoutX="70.0" layoutY="160.0" prefWidth="160.0" promptText="Confirm Password"/>
                        <Button text="Register" layoutX="100.0" layoutY="210.0" prefWidth="100.0" onAction="#handleRegister"/>
                        <Button text="Back to Login" layoutX="100.0" layoutY="250.0" prefWidth="100.0" onAction="#handleBackToLogin"/>

                        <Label fx:id="errorLabel" layoutX="70.0" layoutY="280.0" textFill="RED"/>
                    </children>
                </Pane>
            </children>
        </Pane>
    </children>
</AnchorPane>
