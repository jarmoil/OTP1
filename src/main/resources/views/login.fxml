<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" stylesheets="@../css/MainWindowStyle.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.login.LoginController">
    <children>
        <Pane prefHeight="300.0" prefWidth="400.0" styleClass="mainPane">
            <children>
                <Pane layoutX="100.0" layoutY="50.0" prefHeight="200.0" prefWidth="200.0" styleClass="highlightCard">
                    <children>
                        <Label layoutX="55.0" layoutY="14.0" text="%loginFXML.login" textFill="WHITE">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </Label>

                        <TextField fx:id="usernameField" layoutX="20.0" layoutY="50.0" prefWidth="160.0" promptText="%loginFXML.username" />
                        <PasswordField fx:id="passwordField" layoutX="20.0" layoutY="90.0" prefWidth="160.0" promptText="%loginFXML.password" />
                        <Button layoutX="50.0" layoutY="140.0" onAction="#handleLogin" prefWidth="100.0" text="%loginFXML.login" />
                        <Hyperlink layoutX="50.0" layoutY="170.0" onAction="#handleShowRegister" text="%loginFXML.createAcc" />

                        <Label fx:id="errorLabel" layoutX="20.0" layoutY="180.0" textFill="RED" />
                    </children>
                </Pane>
            </children>
        </Pane>
    </children>
</AnchorPane>
