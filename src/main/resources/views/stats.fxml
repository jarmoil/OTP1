<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="689.0" prefWidth="520.0" stylesheets="@../css/MainWindowStyle.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.StatsController">
    <children>
        <Label layoutX="200.0" layoutY="14.0" text="Your Statistics" textFill="WHITE">
            <font>
                <Font size="28.0" />
            </font>
        </Label>

        <ScrollPane layoutX="20.0" layoutY="80.0" prefHeight="594.0" prefWidth="480.0" style="-fx-background: transparent; -fx-background-color: transparent;">
            <content>
                <VBox fx:id="statsContainer" spacing="10.0" style="-fx-padding: 20;" >
                    <children>
                        <Label fx:id="noStatsLabel" text="Loading statistics..." textFill="WHITE" />
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
