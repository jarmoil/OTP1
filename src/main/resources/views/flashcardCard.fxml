<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="cardPane" spacing="10" stylesheets="@../css/global.css" styleClass="flashcard" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.flashcards.FlashcardCardController">
    <padding>
        <Insets bottom="15" left="15" right="15" top="15" />
    </padding>

    <Label fx:id="questionLabel" styleClass="flashcard-question" wrapText="true" />
    <Label fx:id="choicesLabel" styleClass="flashcard-choices" wrapText="true" />

    <HBox fx:id="buttonBox" spacing="10">
        <Button fx:id="updateButton" onAction="#handleUpdate" text="%flashcardCardFXML.updateButton" />
        <Button fx:id="deleteButton" onAction="#handleDelete" text="%flashcardCardFXML.deleteButton" />
    </HBox>
</VBox>
