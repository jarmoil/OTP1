<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="680.0" prefWidth="500.0" stylesheets="@../css/flashcard.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.FlashcardSetController">
    <children>
        <Label fx:id="setDescriptionLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="240.0" layoutY="14.0" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: white;" text="Desc">
         <font>
            <Font size="20.0" />
         </font></Label>
        <HBox layoutX="14.0" layoutY="15.0" spacing="10">
            <Button fx:id="createFlashcardButton" onAction="#handleCreateFlashcard" text="Create Flashcard" />
            <Button fx:id="startQuizButton" onAction="#handleStartQuiz" styleClass="quiz-button" text="Start Quiz" />
        </HBox>
        <ScrollPane layoutX="20.0" layoutY="62.0" prefHeight="600.0" prefWidth="480.0" style="-fx-background: transparent; -fx-background-color: transparent;">
            <StackPane alignment="CENTER">

                    <VBox fx:id="flashcardsContainer" spacing="15" style="-fx-background-color: transparent;">
                        <padding>
                            <Insets bottom="10" left="10" right="10" top="10" />
                        </padding>
                    </VBox>

            </StackPane>
        </ScrollPane>
    </children>
</AnchorPane>
