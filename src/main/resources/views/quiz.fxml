<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="quizPane" prefHeight="689.0" prefWidth="520.0" xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.QuizController">
    <children>
        <VBox spacing="20" alignment="CENTER" layoutX="20.0" layoutY="20.0" prefWidth="480.0">
            <Label fx:id="questionLabel" wrapText="true" textFill="WHITE">
                <font>
                    <Font size="18.0"/>
                </font>
            </Label>

            <VBox fx:id="choicesBox" spacing="10">
                <RadioButton fx:id="choiceA" mnemonicParsing="false" textFill="WHITE"/>
                <RadioButton fx:id="choiceB" mnemonicParsing="false" textFill="WHITE"/>
                <RadioButton fx:id="choiceC" mnemonicParsing="false" textFill="WHITE"/>
            </VBox>

            <Button fx:id="submitButton" text="Submit Answer" onAction="#handleSubmit"/>
            <Button fx:id="nextButton" text="Next Question" onAction="#handleNext" visible="false"/>

            <Label fx:id="feedbackLabel" wrapText="true" textFill="WHITE">
                <font>
                    <Font size="14.0"/>
                </font>
            </Label>

            <Label fx:id="scoreLabel" textFill="WHITE">
                <font>
                    <Font size="16.0"/>
                </font>
            </Label>
        </VBox>
    </children>
</AnchorPane>
