<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="689.0" prefWidth="520.0" stylesheets="@../css/MainWindowStyle.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AnalyticsController">
    <children>
        <Label layoutX="200.0" layoutY="14.0" text="Analytics" textFill="WHITE">
            <font>
                <Font size="28.0" />
            </font>
        </Label>

        <HBox layoutX="20.0" layoutY="70.0" spacing="15.0">
            <children>

                <Pane prefHeight="80.0" prefWidth="140.0" styleClass="highlightCard">
                    <children>
                        <Label layoutX="14.0" layoutY="15.0" text="Avg Performance" textFill="WHITE" style="-fx-font-size: 12px;" />
                        <Label fx:id="averagePerformanceLabel" layoutX="14.0" layoutY="35.0" text="0.0%" textFill="WHITE" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                    </children>
                </Pane>

                <Pane prefHeight="80.0" prefWidth="140.0" styleClass="highlightCard">
                    <children>
                        <Label layoutX="14.0" layoutY="15.0" text="Total Sets" textFill="WHITE" style="-fx-font-size: 12px;" />
                        <Label fx:id="totalSetsLabel" layoutX="14.0" layoutY="35.0" text="0" textFill="WHITE" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                    </children>
                </Pane>
            </children>
        </HBox>

        <Button fx:id="createTeacherButton" layoutX="20.0" layoutY="170.0" onAction="#handleCreateTeacher" prefHeight="40.0" prefWidth="150.0" styleClass="primaryButton" text="Create Teacher" />

        <Label layoutX="20.0" layoutY="230.0" text="Set Performance Analytics" textFill="WHITE" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <ScrollPane fx:id="analyticsScrollPane" layoutX="20.0" layoutY="260.0" prefHeight="414.0" prefWidth="480.0" style="-fx-background: transparent; -fx-background-color: transparent;">
            <content>
                <VBox fx:id="analyticsContainer" spacing="10.0" style="-fx-padding: 20;">
                    <children>
                        <Label text="Loading analytics..." textFill="WHITE" />
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
